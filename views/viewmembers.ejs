<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Event Ticket Purchasers</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-white">
  <%- include('partials/Adminnav', { admin }) %>
  <div class="container mt-5">
    <h2 class="mb-4">Members Who Purchased Tickets</h2>

    

    
    <% if (purchasers.length === 0) { %>
      <div class="alert alert-warning">No ticket purchases yet for this event.</div>
    <% } else { %>
      <table class="table table-dark table-bordered">
        <thead>
          <tr>
            <th>Member ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Purchase Date</th>
            <th>Amount Paid</th>
          </tr>
        </thead>
        <tbody>
          <% purchasers.forEach(p => { %>
            <tr>
              <td><%= p.MemberID %></td>
              <td><%= p.Member_FullName %></td>
              <td><%= p.Member_Email %></td>
              <td><%= new Date(p.PurchaseDate).toLocaleDateString() %></td>
              <td>$<%= (p.TotalAmount || 0).toFixed(2) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>

    <a href="/Admin/ticketpage" class="btn btn-secondary mt-3">Back to Ticket Overview</a>
  </div>
</body>
</html>
