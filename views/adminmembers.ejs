<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Manage Memebers</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet" />
</head>
<body>

<%- include('partials/Adminnav.ejs') %>

<div class="container mt-5 text-white">
  <h2>Manage Members</h2>

  <form class="d-flex mb-4" method="get" action="/Admin/members">
    <input class="form-control me-2" type="search" name="search" placeholder="Search by name or email" value="<%= search %>" />
    <button class="btn btn-warning" type="submit">Search</button>
  </form>

  <% if (members.length > 0) { %>
    <p><strong><%= members.length %></strong> member(s) found.</p>
    <table class="table table-dark table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Tier</th>
          <th>Profile Picture</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% members.forEach(member => { %>
          <tr>
            <td><%= member.Member_FullName %></td>
            <td><%= member.Member_Email %></td>
            <td><%= member.Member_Phone %></td>
            <td>
              <form action="/Admin/changeTier/<%= member.MemberID %>" method="POST">
                <select name="tierId" onchange="this.form.submit()">
                  <option value="1" <%= member.TierName === 'Bronze' ? 'selected' : '' %>>Bronze</option>
                  <option value="2" <%= member.TierName === 'Silver' ? 'selected' : '' %>>Silver</option>
                  <option value="3" <%= member.TierName === 'Gold' ? 'selected' : '' %>>Gold</option>
                </select>
              </form>
            </td>
            <td>
              <img src="/images/<%= member.Member_ProfilePicture || 'profilepc.jpeg' %>" width="40" height="40" style="border-radius:50%" />
              <form action="/Admin/uploadMemberPic/<%= member.MemberID %>" method="POST" enctype="multipart/form-data">
                <input type="file" name="profileImage" accept="image/*" onchange="this.form.submit()" style="font-size: 12px; margin-top: 5px;" />
              </form>
            </td>
            <td>
              <form action="/Admin/deleteMember/<%= member.MemberID %>" method="POST" onsubmit="return confirm('Are you sure?')">
                <button class="btn btn-sm btn-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <p>No members found.</p>
  <% } %>
</div>

