<!DOCTYPE html>
<html>
<head>
  <title>Restaurant Menu</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
  <style>
    body { background-color: #0c0f18; color: white; }
    .card img { height: 160px; object-fit: cover; }
    .card { background-color: #1c1f2e; border-radius: 10px; border: none; }
    .btn-warning { background-color: #f49b00; border: none; }
  </style>
</head>
<body>
  <%- include('partials/Membernav', { member: member || {} }) %>

  <div class="container mt-4">
    <h1 class="text-center text-warning mb-4">Our Restaurant</h1>

    <form action="/restaurant/summary" method="POST">
      <div class="row">
        <% foodItems.forEach(item => { %>
          <div class="col-md-4 mb-4">
            <div class="card text-white">
              <img src="<%= item.Image %>" class="card-img-top" alt="<%= item.Name %>">
              <div class="card-body" style="background-color: rgba(0, 0, 0, 0.7); border-radius: 0 0 10px 10px;">
  <h5 class="card-title text-white fw-bold text-center"><%= item.Name %></h5>
  <p class="text-white text-center fs-5">$<%= parseFloat(item.Price || 0).toFixed(2) %></p>
  <input type="hidden" name="itemIDs[]" value="<%= item.ItemID %>" />
  <input type="number" name="quantities[]" class="form-control mt-2" placeholder="Quantity" min="0" />
</div>

            </div>
          </div>
        <% }) %>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-warning btn-lg">Checkout</button>
      </div>
    </form>
  </div>
</body>
</html>
