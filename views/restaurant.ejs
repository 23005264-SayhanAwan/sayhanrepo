<!DOCTYPE html>
<html>
<head>
  <title>Restaurant Menu</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
  <style>
    body { background-color: #0c0f18; color: white; }
    .card img { height: 160px; object-fit: cover; }
    .card { background-color: #1c1f2e; border-radius: 10px; border: none; }
    .btn-warning { background-color: #f49b00; border: none; }
    .btn-success { background-color: #28a745; border: none; }
    .quantity-input { max-width: 80px; }
  </style>
</head>
<body>
  <%- include('partials/Membernav', { member: member || {} }) %>

  <div class="container mt-4">
    <h1 class="text-center text-warning mb-4">Our Restaurant</h1>

    <!-- Simple approach - individual forms for each item (like your store items) -->
    <div class="row">
      <% foodItems.forEach(item => { %>
        <div class="col-md-4 mb-4">
          <div class="card text-white">
            <img src="<%= item.Image %>" class="card-img-top" alt="<%= item.Name %>">
            <div class="card-body" style="background-color: rgba(0, 0, 0, 0.7); border-radius: 0 0 10px 10px;">
              <h5 class="card-title text-white fw-bold text-center"><%= item.Name %></h5>
              <% if (item.Description) { %>
                <p class="text-white-50 text-center small"><%= item.Description %></p>
              <% } %>
              <p class="text-white text-center fs-5 fw-bold">$<%= parseFloat(item.Price || 0).toFixed(2) %></p>
              
              <!-- Individual Add to Cart Form (Simple like your store items) -->
              <form action="/restaurant/add-to-cart/<%= item.ItemID %>" method="POST">
                <div class="d-flex align-items-center justify-content-center gap-2">
                  <input type="number" 
                         name="quantity" 
                         class="form-control quantity-input text-center" 
                         value="1" 
                         min="1" 
                         max="10"
                         style="background-color: #2c3e50; color: white; border: 1px solid #f49b00;">
                  <button type="submit" class="btn btn-warning btn-sm px-3">
                    <i class="fas fa-cart-plus"></i> Add to Cart
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>

    <!-- Cart Actions -->
    <div class="text-center mt-4">
      <a href="/cart" class="btn btn-success btn-lg">
        <i class="fas fa-shopping-cart"></i> View Cart & Checkout
      </a>
    </div>
  </div>

  <!-- Font Awesome for Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</body>
</html>