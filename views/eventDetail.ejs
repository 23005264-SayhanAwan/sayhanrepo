<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= event.Title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>
  <!-- Include the Member Navigation Bar -->
  <%- include('partials/Membernav', { member: member }) %>
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-8">
        <h2><%= event.Title %></h2>
        <img src="/images/<%= event.Eventpic %>" class="img-fluid mb-3" alt="<%= event.Title %>">
        <p><strong>Type:</strong> <%= event.EventType %></p>
        <p><strong>Date:</strong> <%= event.EventDate.toISOString().slice(0,10) %></p>
        <p><strong>Location:</strong> <%= event.Location %></p>
        <p class="mt-3"><%= event.Description %></p>
        
        <!-- Additional event details based on type -->
        <% if (event.Coach) { %>
          <p><strong>Coach:</strong> <%= event.Coach %></p>
        <% } %>
        <% if (event.Meeting_Room) { %>
          <p><strong>Meeting Room:</strong> <%= event.Meeting_Room %></p>
        <% } %>
        <% if (event.EventSession) { %>
          <p><strong>Session:</strong> <%= event.EventSession %></p>
        <% } %>
      </div>
      
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0">🎫 Event Tickets</h5>
          </div>
          <div class="card-body">
            <% if (ticketPublished) { %>
              <!-- Ticket pricing info -->
              <div class="mb-3">
                <h6 class="text-primary">Ticket Price</h6>
                <h4 class="text-success">$<%= event.TicketPrice.toFixed(2) %></h4>
              </div>
              
              <!-- Availability -->
              <div class="mb-3">
                <h6>Availability</h6>
                <% if (typeof ticketsLeft === 'number') { %>
                  <% if (ticketsLeft > 0) { %>
                    <span class="badge bg-success">✅ <%= ticketsLeft %> tickets left</span>
                  <% } else { %>
                    <span class="badge bg-danger">❌ Sold Out</span>
                  <% } %>
                <% } else { %>
                  <span class="badge bg-info">♾️ Unlimited</span>
                <% } %>
              </div>
              
              <!-- Add to cart button -->
              <% if (ticketsLeft === 'Unlimited' || ticketsLeft > 0) { %>
                <form action="/add-ticket-to-cart/<%= event.EventID %>" method="POST" class="mb-3">
                  <button type="submit" class="btn btn-success btn-lg w-100">
                    🛒 Add Ticket to Cart
                  </button>
                </form>
                
                <div class="alert alert-info">
                  <small>
                    <strong>💡 Tip:</strong> Tickets will be added to your cart where you can adjust quantity and apply cashback/discounts to other items.
                  </small>
                </div>
              <% } else { %>
                <button class="btn btn-secondary btn-lg w-100" disabled>
                  ❌ Sold Out
                </button>
              <% } %>
              
              <!-- Ticket limits info -->
              <div class="mt-3">
                <small class="text-muted">
                  <ul class="mb-0">
                    <li>Maximum 5 tickets per person</li>
                    <li>Tickets are non-refundable</li>
                    <li>Valid ID required at event</li>
                  </ul>
                </small>
              </div>
              
            <% } else { %>
              <div class="text-center">
                <div class="mb-3">
                  <i class="fas fa-clock fa-3x text-warning"></i>
                </div>
                <h6>Tickets Not Yet Available</h6>
                <p class="text-muted">Tickets for this event are not yet available for purchase. Please check back later!</p>
              </div>
            <% } %>
          </div>
        </div>
        
        <!-- Navigation -->
        <div class="mt-3">
          <a href="/events" class="btn btn-outline-primary">
            ← Back to Events
          </a>
          <a href="/cart" class="btn btn-outline-success">
            🛒 View Cart
          </a>
        </div>
      </div>
    </div>
  </div>
  

</body>
</html>