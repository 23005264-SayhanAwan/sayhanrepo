<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Events</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>
  <%- include('partials/Membernav', { member: member }) %>
  <div class="container mt-5">
    <h2 class="mb-4">Upcoming Events</h2>
    <div class="row">
      <% if (events.length === 0) { %>
        <p>No events available.</p>
      <% } else { %>
        <% events.forEach(e => { %>
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <img src="/images/<%= e.Eventpic %>" class="card-img-top" alt="<%= e.Title %>">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= e.Title %></h5>
                <p class="card-text mb-1"><strong>Type:</strong> <%= e.EventType %></p>
                <p class="card-text mb-1"><strong>Date:</strong> <%= e.EventDate.toISOString().slice(0,10) %></p>
                <p class="card-text mb-3"><strong>Location:</strong> <%= e.Location %></p>
                <a href="/event/<%= e.EventID %>" class="btn btn-primary mt-auto">View Details</a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

