<!DOCTYPE html>
<html>
<head>
  <title>Order Success</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
  <style>
    body {
      background-color: #0c0f18;
      color: white;
      text-align: center;
      padding-top: 50px;
    }
    .success-box {
      background-color: #1c1f2e;
      padding: 40px;
      border-radius: 12px;
      display: inline-block;
      margin-top: 40px;
      max-width: 600px;
    }
    .btn-warning {
      background-color: #f49b00;
      border: none;
      margin: 0.5rem;
    }
    .btn-warning:hover {
      background-color: #e08900;
    }
    .order-summary {
      background-color: #2c3e50;
      padding: 20px;
      border-radius: 8px;
      margin: 20px 0;
      text-align: left;
    }
    .success-icon {
      font-size: 4rem;
      color: #28a745;
      margin-bottom: 1rem;
    }
  </style>
</head>
<body>
  <%- include('partials/Membernav', { member: member }) %>

  <div class="container">
    <div class="success-box">
      <div class="success-icon">
        <i class="fas fa-check-circle"></i>
      </div>
      
      <h1 class="text-success mb-3">Payment Successful!</h1>
      
      <% if (typeof orderDetails !== 'undefined' && orderDetails) { %>
        <div class="order-summary">
          <h5 class="text-warning mb-3">Order Summary</h5>
          
          <div class="row">
            <div class="col-6"><strong>Order ID:</strong></div>
            <div class="col-6">#<%= orderDetails.purchaseID %></div>
          </div>
          
          <% if (orderDetails.totalAmount) { %>
            <div class="row">
              <div class="col-6"><strong>Subtotal:</strong></div>
              <div class="col-6">$<%= orderDetails.totalAmount.toFixed(2) %></div>
            </div>
          <% } %>
          
          <% if (orderDetails.discountAmount && orderDetails.discountAmount > 0) { %>
            <div class="row text-success">
              <div class="col-6"><strong>Discount:</strong></div>
              <div class="col-6">-$<%= orderDetails.discountAmount.toFixed(2) %></div>
            </div>
          <% } %>
          
          <% if (orderDetails.cashbackUsed && orderDetails.cashbackUsed > 0) { %>
            <div class="row text-info">
              <div class="col-6"><strong>Cashback Used:</strong></div>
              <div class="col-6">-$<%= orderDetails.cashbackUsed.toFixed(2) %></div>
            </div>
          <% } %>
          
          <hr class="text-muted">
          
          <div class="row">
            <div class="col-6"><strong>Total Paid:</strong></div>
            <div class="col-6 text-success"><strong>$<%= orderDetails.finalAmount.toFixed(2) %></strong></div>
          </div>
          
          <% if (orderDetails.cashbackEarned && orderDetails.cashbackEarned > 0) { %>
            <div class="row text-warning mt-2">
              <div class="col-6"><strong>Cashback Earned:</strong></div>
              <div class="col-6">+$<%= orderDetails.cashbackEarned.toFixed(2) %></div>
            </div>
          <% } %>
        </div>
      <% } %>
      
      <p class="mb-2">Thank you for your purchase!</p>
      
      <% if (typeof orderDetails !== 'undefined' && orderDetails && orderDetails.cashbackEarned > 0) { %>
        <p class="text-warning">Your cashback of $<%= orderDetails.cashbackEarned.toFixed(2) %> has been credited to your account.</p>
      <% } %>
      
      <div class="mt-4">
        <a href="/store-items" class="btn btn-warning">
          <i class="fas fa-shopping-bag"></i> Continue Shopping
        </a>
        <a href="/restaurant" class="btn btn-warning">
          <i class="fas fa-utensils"></i> Restaurant Menu
        </a>
        <a href="/store/past-orders" class="btn btn-warning">
          <i class="fas fa-history"></i> View Orders
        </a>
      </div>
    </div>
  </div>

  <!-- Font Awesome for Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</body>
</html>
