<!DOCTYPE html>
<html>
<head>
  <title>Member Page</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
  <!-- MOVED: Bootstrap JS to bottom for better loading -->
  <style>
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
      background-color: #0c0f18;
      color: white;
      overflow-x: hidden;
    }

    .navbar-custom {
      background-color: #f49b00;
    }

    .navbar-custom .nav-link {
      color: #ffffff;
      font-size: 18px;
      padding-left: 1rem;
      padding-right: 1rem;
    }

    .navbar-custom .nav-link:hover {
      color: #cccccc;
    }

    .navbar-brand img {
      height: 80px;
      margin-right: 10px;
    }

    .navbar-nav {
      align-items: center;
    }

    .profile-pic {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid white;
      cursor: pointer;
    }

    .dropdown-menu {
      background-color: #1a1f2e;
      z-index: 9999 !important;
      border: 1px solid #444;
    }

    .dropdown-item {
      color: #ffffff;
    }

    .dropdown-item:hover {
      background-color: #2a2f3e;
      color: #ffffff;
    }

    .dropdown-divider {
      border-top: 1px solid #444;
    }

    /* Fix dropdown positioning */
    .dropdown-menu-end {
      right: 0 !important;
      left: auto !important;
    }

    /* Ensure dropdowns don't go off-screen */
    .dropdown {
      position: static;
    }

    @media (min-width: 992px) {
      .dropdown {
        position: relative;
      }
    }

    /* Responsive adjustments to match admin nav */
    @media (max-width: 1200px) {
      .navbar-custom .nav-link {
        font-size: 16px;
        padding-left: 0.75rem;
        padding-right: 0.75rem;
      }
      
      .navbar-brand img {
        height: 70px;
      }
    }

    @media (max-width: 992px) {
      .navbar-custom .nav-link {
        font-size: 14px;
        padding-left: 0.5rem;
        padding-right: 0.5rem;
      }
      
      .navbar-brand img {
        height: 60px;
      }

      /* Stack dropdown items vertically on mobile */
      .dropdown-menu {
        position: static !important;
        float: none;
        width: auto;
        margin-top: 0;
        background-color: #1a1f2e;
        border: 0;
        box-shadow: none;
      }
    }

    @media (max-width: 768px) {
      .navbar-custom .nav-link {
        font-size: 12px;
        padding-left: 0.25rem;
        padding-right: 0.25rem;
      }
      
      .navbar-brand img {
        height: 50px;
      }
    }

    /* Fix navbar toggler */
    .navbar-toggler {
      border-color: rgba(255, 255, 255, 0.5);
    }

    .navbar-toggler-icon {
      background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba%28255, 255, 255, 0.75%29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-custom">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">
        <img src="/images/logo.png" alt="Logo" />
      </a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#collapsibleNavbar"
        aria-controls="collapsibleNavbar"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/Member">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/Booking">Booking</a></li>
          
          <!-- FIXED: Store dropdown with proper click handling -->
          <li class="nav-item dropdown">
            <a
              href="/store-items" 
              class="nav-link dropdown-toggle" 
              id="storeDropdown" 
              role="button" 
              data-bs-toggle="dropdown" 
              data-bs-auto-close="outside"
              aria-expanded="false"
            >
              Store
            </a>
            <ul class="dropdown-menu" aria-labelledby="storeDropdown">
              <li><a class="dropdown-item" href="/store-items">üè™ All Items</a></li>
              <li><hr class="dropdown-divider" /></li>
              <li><a class="dropdown-item" href="/store-items?category=Balls">‚öΩ Balls</a></li>
              <li><a class="dropdown-item" href="/store-items?category=Jerseys">üëï Jerseys</a></li>
              <li><a class="dropdown-item" href="/store-items?category=Bags">üéí Bags</a></li>
            </ul>
          </li>
          
          <li class="nav-item"><a class="nav-link" href="/restaurant">Restaurant</a></li>
          <li class="nav-item"><a class="nav-link" href="/events">Events</a></li>
          <li class="nav-item"><a class="nav-link" href="/Member/calendar">Calendar</a></li>
          <li class="nav-item"><a class="nav-link" href="/membership">Membership</a></li>
          <li class="nav-item"><a class="nav-link" href="/cart">Cart</a></li>
          <li class="nav-item"><a class="nav-link" href="/store/past-orders">Orders</a></li>
          
          <!-- Profile picture dropdown -->
          <li class="nav-item dropdown">
            <a
              href="#"
              class="nav-link dropdown-toggle d-flex align-items-center"
              id="profileDropdown"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <img 
                id="profilePicImg"
                src="<%= member.Member_ProfilePicture ? '/images/' + member.Member_ProfilePicture + '?' + Date.now() : '/images/profilepc.jpeg' %>" 
                alt="Profile Picture" 
                class="profile-pic"
              />
            </a>

            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
              <li>
                <form id="profilePicForm" action="/Member/uploadProfilePic" method="POST" enctype="multipart/form-data" style="margin:0;">
                  <button type="button" class="dropdown-item" onclick="document.getElementById('profileUploadInput').click();">
                    Change Profile Picture
                  </button>
                  <input type="file" id="profileUploadInput" name="profileImage" accept="image/*" style="display: none;" onchange="document.getElementById('profilePicForm').submit();" />
                </form>
              </li>
              <li><hr class="dropdown-divider" /></li>
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

</body>

<script>
  // After successful upload, update the profile picture to the new uploaded image
  document.getElementById('profilePicForm').addEventListener('submit', function(e) {
    setTimeout(function() {
      var img = document.getElementById('profilePicImg');
      if (img) {
        // Always use the latest uploaded image, fallback to default if not present
        var newSrc = "<%= member.Member_ProfilePicture ? '/images/' + member.Member_ProfilePicture : '/images/profilepc.jpeg' %>?" + new Date().getTime();
        img.src = newSrc;
      }
    }, 1000); // Adjust timeout as needed for your backend to complete upload
  });
</script>

</html>