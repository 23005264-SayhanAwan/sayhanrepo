<!DOCTYPE html>
<html>
<head>
  <title>Member Page</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
      background-color: #0c0f18; /* match dark background */
      color: white;
    }

    .navbar-custom {
      background-color:  #f49b00; /* dark from logo */
    }

    .navbar-custom .nav-link {
      color: #ffffff; /* white text */
    }

    .navbar-custom .nav-link:hover {
      color: #cccccc; /* subtle hover effect */
    }

    .navbar-brand img {
      height: 100px; /* Adjust logo size */
      margin-right: 10px; /* Space between logo and text */
    }

    .navbar-nav {
      margin-left: auto;
    }

    .nav-item {
      font-size: 20px; /* Adjust text size */
    }

    .profile-pic {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      object-fit: cover;
      border: 2px solid white;
      cursor: pointer;
    }

    .dropdown-menu {
      background-color: #1a1f2e; /* dark background for dropdown */
    }

    .dropdown-item {
      color: #ffffff; /* white text */
    }



     /* Fix dropdown toggle behavior */
    .dropdown-toggle::after {
      transition: transform 0.2s ease;
    }

    .dropdown-toggle[aria-expanded="true"]::after {
      transform: rotate(180deg);
    }

    /* Ensure dropdown works on hover and click */
    .dropdown:hover .dropdown-menu {
      display: block;
    }

    .dropdown-menu {
      display: none;
    }

    .dropdown.show .dropdown-menu {
      display: block;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-custom">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">
        <img src="/images/logo.png" alt="Logo" />
      </a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#collapsibleNavbar"
        aria-controls="collapsibleNavbar"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/Member">Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/Booking">Booking</a></li>
          <!-- Store with dropdown menu -->
<li class="nav-item dropdown">
  <a
    href="/store-items" 
    class="nav-link dropdown-toggle" 
    id="storeDropdown" 
    role="button" 
    data-bs-toggle="dropdown" 
    aria-expanded="false"
  >
    Store
  </a>
  <ul class="dropdown-menu" aria-labelledby="storeDropdown">
    <li><a class="dropdown-item" href="/store-items">üè™ All Items</a></li>
    <li><hr class="dropdown-divider" /></li>
    <li><a class="dropdown-item" href="/store-items?category=Balls">‚öΩ Balls</a></li>
    <li><a class="dropdown-item" href="/store-items?category=Jerseys">üëï Jerseys</a></li>
    <li><a class="dropdown-item" href="/store-items?category=Bags">üéí Bags</a></li>
  </ul>
</li>

          <li class="nav-item"><a class="nav-link" href="/restaurant">Restaurant</a></li>
          <li class="nav-item"><a class="nav-link" href="/events">Events and Tickets</a></li>
          <li class="nav-item"><a class="nav-link" href="/Member/calendar">Calendar</a></li>
          <li class="nav-item"><a class="nav-link" href="/membership">Membership</a></li>
          <li class="nav-item"><a class="nav-link" href="/cart">Cart</a></li>
          <li class="nav-item"><a class="nav-link" href="/store/past-orders">Past Orders</a></li>
          <!-- Profile picture dropdown -->
          <li class="nav-item dropdown">
            <a
              href="#"
              class="nav-link dropdown-toggle d-flex align-items-center"
              id="profileDropdown"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <img 
                id="profilePicImg"
                src="<%= member.Member_ProfilePicture ? '/images/' + member.Member_ProfilePicture + '?' + Date.now() : '/images/profilepc.jpeg' %>" 
                alt="Profile Picture" 
                class="profile-pic"
              />
            </a>

            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
              <li>
                <form id="profilePicForm" action="/Member/uploadProfilePic" method="POST" enctype="multipart/form-data" style="margin:0;">
                  <button type="button" class="dropdown-item" onclick="document.getElementById('profileUploadInput').click();">
                    Change Profile Picture
                  </button>
                  <input type="file" id="profileUploadInput" name="profileImage" accept="image/*" style="display: none;" onchange="document.getElementById('profilePicForm').submit();" />
                </form>
              </li>
              <li><hr class="dropdown-divider" /></li>
              <li><a class="dropdown-item" href="/logout">Logout</a></li>
            </ul>
          </li>

        </ul>
      </div>
    </div>
  </nav>

</body>

<script>
  // After successful upload, update the profile picture to the new uploaded image
  document.getElementById('profilePicForm').addEventListener('submit', function(e) {
    setTimeout(function() {
      var img = document.getElementById('profilePicImg');
      if (img) {
        // Always use the latest uploaded image, fallback to default if not present
        var newSrc = "<%= member.Member_ProfilePicture ? '/images/' + member.Member_ProfilePicture : '/images/profilepc.jpeg' %>?" + new Date().getTime();
        img.src = newSrc;
      }
    }, 1000); // Adjust timeout as needed for your backend to complete upload
  });
</script>

</html>
