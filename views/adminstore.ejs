<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Store</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet" />
  <style>
/* Card consistency fixes for admin store */
.card {
  height: 100%; /* Make all cards same height */
  display: flex;
  flex-direction: column;
  min-height: 500px; /* Minimum card height for admin cards */
}

.card-img-top {
  height: 250px; /* Fixed height for all images */
  width: 100%;
  object-fit: cover; /* Crop to fit without stretching */
  object-position: center; /* Center the image */
}

.card-body {
  flex: 1; /* Fill remaining space */
  display: flex;
  flex-direction: column;
  padding: 1rem;
}

.card-body .btn {
  margin-top: auto; /* Push buttons to bottom */
}

/* Ensure buttons stay at bottom and are aligned */
.card-body > *:last-child {
  margin-top: auto;
}

/* Optional: Add some spacing between cards */
.col-md-4 {
  margin-bottom: 2rem;
}

/* Ensure consistent card width */
.card {
  max-width: 100%;
}

/* Admin-specific button styling */
.btn {
  margin-right: 0.5rem;
}
</style></style>
</head>
<body>

  <%- include('partials/Adminnav', { admin: admin }) %>

  <div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Store Items</h2>
      <!-- ⭐ Add new product button -->
      <a href="/admin/addItem" class="btn btn-success">Add New Item</a>
    </div>

    <div class="row">
      <% if (items && items.length > 0) { %>
        <% items.forEach(item => { %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <img src="/images/<%= item.storeitempic %>" class="card-img-top" alt="<%= item.Name %>" />
              <div class="card-body">
                <h5 class="card-title"><%= item.Name %></h5>
                <p class="card-text"><strong>Category:</strong> <%= item.Category %></p>
                <p class="card-text">
                  <strong>Price:</strong>
                  $<%= (item.Price !== undefined && item.Price !== null) ? Number(item.Price).toFixed(2) : 'N/A' %>
                </p>

                <!-- ⭐ Edit button -->
                <a href="/admin/editItem/<%= item.ItemID %>" class="btn btn-warning">Edit</a>

                <!-- ⭐ Delete button -->
                <a href="/deleteItem/<%= item.ItemID %>" class="btn btn-danger ms-2">Delete</a>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12">
          <p>No items available in the store.</p>
        </div>
      <% } %>
    </div>
  </div>

</body>
</html>

