<!DOCTYPE html>
<html>
<head>
  <title>Member Login</title>
  <style>
    body {
      background-color: #0c0f18;
      color: white;
    }

    .btn-orange {
      background-color: #f49b00;
      color: white;
      border: none;
    }

    .btn-orange:hover {
      background-color: #d88700;
    }

    .login-container {
      background-color: #1a1f2e;
      padding: 30px;
      border-radius: 10px;
      margin-top: 50px;
      width: 100%;
      max-width: 500px;
    }

    .alert {
      padding: 10px 20px;
      border-radius: 5px;
      margin-bottom: 15px;
    }

    .alert-danger {
      background-color: #dc3545;
      color: white;
    }

    .alert-success {
      background-color: #28a745;
      color: white;
    }
  </style>
</head>
<body>
  <%- include('partials/homepage.ejs') %>

  <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="login-container">
      <h2>Login</h2>

     <form action="/Login" method="POST">
  <div class="mb-3">
    <label for="email">Email:</label>
    <input type="text" id="email" name="email" class="form-control" required>
  </div>

  <div class="mb-3">
    <label for="password">Password:</label>
    <input type="password" id="password" name="password" class="form-control" required>
  </div>
  <div class="mb-3">
          <label>Role:</label><br>
          <div class="form-check">
            <input class="form-check-input" type="radio" id="member" name="role" value="member" checked>
            <label class="form-check-label" for="member">Member</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" id="admin" name="role" value="admin">
            <label class="form-check-label" for="admin">Admin</label>
          </div>
        </div>
  <div class="text-center">
    <button type="submit" class="btn btn-orange">Login</button>
  </div>
</form>

<!-- Render error below the form -->
<% if (typeof error !== 'undefined') { %>
  <div class="alert alert-danger mt-3 text-center">
    <%= error %>
  </div>
<% } %>
<!-- Render success message below the form -->
    </div>
  </div>
</body>
</html>

