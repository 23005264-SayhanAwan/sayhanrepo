<!DOCTYPE html>
<html>
<head>
  <title>My Cashback</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>

  <!-- Navbar -->
  <%- include('partials/Membernav.ejs') %>

  <div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2><i class="fas fa-wallet me-2"></i>My Cashback</h2>
      <a href="/Member" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
      </a>
    </div>

    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
      <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #28a745, #20c997);">
          <div class="card-body text-white">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h5 class="card-title mb-1">Active Cashback</h5>
                <h3 class="mb-0">$<%= activeCashback.toFixed(2) %></h3>
              </div>
              <div class="text-white-50">
                <i class="fas fa-coins fa-2x"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100" style="background: linear-gradient(135deg, #dc3545, #fd7e14);">
          <div class="card-body text-white">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h5 class="card-title mb-1">Expired Cashback</h5>
                <h3 class="mb-0">$<%= expiredCashback.toFixed(2) %></h3>
              </div>
              <div class="text-white-50">
                <i class="fas fa-clock fa-2x"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Cashback Records -->
    <div class="card border-0 shadow-sm">
      <div class="card-header bg-light">
        <h5 class="mb-0"><i class="fas fa-list me-2"></i>Cashback History</h5>
      </div>
      <div class="card-body">
        <% if (cashbackRecords.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-hover align-middle">
              <thead class="table-dark">
                <tr>
                  <th><i class="fas fa-dollar-sign me-1"></i>Amount</th>
                  <th><i class="fas fa-tag me-1"></i>Earned From</th>
                  <th><i class="fas fa-calendar-plus me-1"></i>Earned Date</th>
                  <th><i class="fas fa-calendar-times me-1"></i>Expiry Date</th>
                  <th><i class="fas fa-info-circle me-1"></i>Status</th>
                  <th><i class="fas fa-hourglass-half me-1"></i>Days Left</th>
                </tr>
              </thead>
              <tbody>
                <% cashbackRecords.forEach(record => { 
                  const earnedDate = new Date(record.EarnedDate);
                  const expiryDate = new Date(record.Cashback_ExpiryDate);
                  const today = new Date();
                  const daysLeft = Math.ceil((expiryDate - today) / (1000 * 60 * 60 * 24));
                  const isExpired = record.Status === 'Expired';
                  const isExpiringSoon = !isExpired && daysLeft <= 30;
                %>
                  <tr class="<%= isExpired ? 'table-danger' : (isExpiringSoon ? 'table-warning' : '') %>">
                    <td>
                      <span class="fw-bold text-success">$<%= Number(record.Amount).toFixed(2) %></span>
                    </td>
                    <td>
                      <span class="text-muted"><%= record.EarnedFrom %></span>
                      <% if (record.fk_PurchaseTransactionID) { %>
                        <br><small class="text-muted">Transaction ID: <%= record.fk_PurchaseTransactionID %></small>
                      <% } %>
                    </td>
                    <td>
                      <span class="text-muted"><%= earnedDate.toLocaleDateString() %></span>
                    </td>
                    <td>
                      <span class="text-muted"><%= expiryDate.toLocaleDateString() %></span>
                    </td>
                    <td>
                      <% if (isExpired) { %>
                        <span class="badge bg-danger">
                          <i class="fas fa-times-circle me-1"></i>Expired
                        </span>
                      <% } else if (isExpiringSoon) { %>
                        <span class="badge bg-warning">
                          <i class="fas fa-exclamation-triangle me-1"></i>Expiring Soon
                        </span>
                      <% } else { %>
                        <span class="badge bg-success">
                          <i class="fas fa-check-circle me-1"></i>Active
                        </span>
                      <% } %>
                    </td>
                    <td>
                      <% if (isExpired) { %>
                        <span class="text-danger">Expired</span>
                      <% } else if (daysLeft <= 0) { %>
                        <span class="text-danger">Today</span>
                      <% } else { %>
                        <span class="<%= isExpiringSoon ? 'text-warning' : 'text-success' %>">
                          <%= daysLeft %> day<%= daysLeft !== 1 ? 's' : '' %>
                        </span>
                      <% } %>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="text-center py-5">
            <i class="fas fa-wallet fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">No cashback records found</h5>
            <p class="text-muted">Start making purchases to earn cashback rewards!</p>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Info Card -->
    <div class="card border-0 shadow-sm mt-4 bg-light">
      <div class="card-body">
        <h6 class="card-title"><i class="fas fa-info-circle me-2"></i>Cashback Information</h6>
        <ul class="mb-0">
          <li>Cashback expires 365 days from the earned date</li>
          <li>Active cashback can be used for future purchases</li>
          <li>Expired cashback cannot be recovered</li>
          <li>Use your cashback before it expires to maximize savings</li>
        </ul>
      </div>
    </div>
  </div>

  <style>
    .table-hover tbody tr:hover {
      background-color: rgba(0, 0, 0, 0.05);
    }
    
    .badge {
      font-size: 0.75rem;
    }
    
    .card {
      border-radius: 10px;
    }s
    
    .table-responsive {
      border-radius: 8px;
    }
  </style>

</body>
</html>