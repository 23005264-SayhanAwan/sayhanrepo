<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>BFC</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Bootstrap CSS -->
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
  />
  
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <style>
    :root {
      --primary-orange: #f49b00;
      --dark-bg: #0a0d14;
      --card-bg: #1a1f2e;
      --text-muted: #8b949e;
      --border-color: rgba(255, 255, 255, 0.1);
      --gradient-primary: linear-gradient(135deg, #f49b00, #ff8800);
      --gradient-dark: linear-gradient(135deg, #0a0d14, #1a1f2e, #2d3748);
      --shadow-soft: 0 10px 30px rgba(0, 0, 0, 0.3);
      --shadow-hover: 0 20px 40px rgba(244, 155, 0, 0.2);
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html, body {
      height: 100%;
      background: var(--gradient-dark);
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      color: white;
      overflow-x: hidden;
    }

    /* Smooth scrolling */
    html {
      scroll-behavior: smooth;
    }

    /* Weather Section */
    .weather-container {
      position: fixed;
      top: 20px;
      left: 50%;
      transform: translateX(-50%);
      z-index: 1000;
      background: rgba(26, 31, 46, 0.9);
      backdrop-filter: blur(10px);
      border: 1px solid var(--border-color);
      border-radius: 12px;
      padding: 10px 16px;
      font-size: 0.9rem;
      font-weight: 500;
      color: var(--primary-orange);
      box-shadow: var(--shadow-soft);
      transition: all 0.3s ease;
    }

    .weather-container:hover {
      transform: translateX(-50%) translateY(-2px);
      box-shadow: var(--shadow-hover);
    }

    .weather-icon {
      margin-right: 8px;
    }

    /* Hero Section */
    .hero-section {
      position: relative;
      width: 100%;
      height: 100vh;
      overflow: hidden;
    }

    .hero-section .carousel-item {
      height: 100vh;
      position: relative;
    }

    .hero-section .carousel-item img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      filter: brightness(0.7);
    }

    .hero-section .carousel-item::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(45deg, rgba(0,0,0,0.6), rgba(244,155,0,0.1));
      z-index: 1;
    }

    /* Modern carousel controls */
    .carousel-control-prev,
    .carousel-control-next {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      background: rgba(26, 31, 46, 0.8);
      backdrop-filter: blur(10px);
      border: 1px solid var(--border-color);
      top: 50%;
      transform: translateY(-50%);
      opacity: 0.8;
      transition: all 0.3s ease;
    }

    .carousel-control-prev {
      left: 30px;
    }

    .carousel-control-next {
      right: 30px;
    }

    .carousel-control-prev:hover,
    .carousel-control-next:hover {
      opacity: 1;
      background: rgba(244, 155, 0, 0.2);
      transform: translateY(-50%) scale(1.1);
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
      width: 24px;
      height: 24px;
      color: var(--primary-orange);
    }

    /* Hero overlay with glassmorphism */
    .hero-overlay {
      position: absolute;
      bottom: 80px;
      left: 50px;
      z-index: 2;
      background: rgba(26, 31, 46, 0.2);
      backdrop-filter: blur(20px);
      border: 1px solid var(--border-color);
      border-radius: 20px;
      padding: 40px;
      max-width: 600px;
      animation: slideUp 1s ease-out;
    }

    @keyframes slideUp {
      from {
        opacity: 0;
        transform: translateY(50px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .hero-overlay h1 {
      font-size: 3.5rem;
      font-weight: 800;
      background: var(--gradient-primary);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 16px;
      line-height: 1.1;
    }

    .hero-overlay p {
      font-size: 1.2rem;
      color: #e2e8f0;
      font-weight: 400;
      line-height: 1.6;
      margin-bottom: 24px;
    }

    .cta-button {
      display: inline-flex;
      align-items: center;
      gap: 10px;
      background: var(--gradient-primary);
      color: #000;
      font-weight: 600;
      padding: 14px 28px;
      border-radius: 12px;
      text-decoration: none;
      transition: all 0.3s ease;
      box-shadow: var(--shadow-soft);
    }

    .cta-button:hover {
      transform: translateY(-3px);
      box-shadow: var(--shadow-hover);
      color: #000;
    }

    /* Carousel indicators */
    .carousel-indicators {
      bottom: 30px;
    }

    .carousel-indicators [data-bs-target] {
      width: 40px;
      height: 4px;
      border-radius: 2px;
      background-color: rgba(255, 255, 255, 0.4);
      border: none;
      transition: all 0.3s ease;
    }

    .carousel-indicators .active {
      background-color: var(--primary-orange);
    }

    /* Section styling */
    .modern-section {
      padding: 100px 0;
      position: relative;
    }

    .section-title {
      text-align: center;
      margin-bottom: 60px;
    }

    .section-title h2 {
      font-size: 2.5rem;
      font-weight: 700;
      background: var(--gradient-primary);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 16px;
    }

    .section-title p {
      font-size: 1.1rem;
      color: var(--text-muted);
      max-width: 600px;
      margin: 0 auto;
    }

    /* Modern cards */
    .modern-card {
      background: var(--card-bg);
      border: 1px solid var(--border-color);
      border-radius: 20px;
      overflow: hidden;
      box-shadow: var(--shadow-soft);
      transition: all 0.4s ease;
      height: 100%;
    }

    .modern-card:hover {
      transform: translateY(-10px);
      box-shadow: var(--shadow-hover);
      border-color: var(--primary-orange);
    }

    .modern-card img {
      width: 100%;
      height: 250px;
      object-fit: cover;
      transition: transform 0.4s ease;
    }

    .modern-card:hover img {
      transform: scale(1.05);
    }

    .modern-card .card-body {
      padding: 24px;
    }

    .modern-card h5 {
      font-size: 1.3rem;
      font-weight: 600;
      color: #fff;
      margin-bottom: 12px;
    }

    .modern-card p {
      color: var(--text-muted);
      line-height: 1.6;
      margin-bottom: 16px;
    }

    .card-meta {
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-size: 0.9rem;
      color: var(--text-muted);
    }

    .card-meta i {
      color: var(--primary-orange);
      margin-right: 6px;
    }

    /* Event carousel styling */
    .event-carousel {
      max-width: 800px;
      margin: 0 auto;
    }

    .event-carousel .modern-card {
      margin: 0 15px;
    }

    /* Grid improvements */
    .promotion-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 30px;
      align-items: stretch;
    }

    /* Floating elements */
    .floating-shapes {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      overflow: hidden;
      pointer-events: none;
      z-index: 0;
    }

    .floating-shapes::before,
    .floating-shapes::after {
      content: '';
      position: absolute;
      width: 200px;
      height: 200px;
      background: radial-gradient(circle, rgba(244, 155, 0, 0.1) 0%, transparent 70%);
      border-radius: 50%;
      animation: float 20s infinite ease-in-out;
    }

    .floating-shapes::before {
      top: 20%;
      left: 10%;
      animation-delay: -5s;
    }

    .floating-shapes::after {
      bottom: 20%;
      right: 10%;
      animation-delay: -10s;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0px) rotate(0deg); }
      33% { transform: translateY(-30px) rotate(120deg); }
      66% { transform: translateY(30px) rotate(240deg); }
    }

    /* Responsive design */
    @media (max-width: 768px) {
      .hero-overlay {
        bottom: 40px;
        left: 20px;
        right: 20px;
        max-width: none;
        padding: 24px;
      }

      .hero-overlay h1 {
        font-size: 2.5rem;
      }

      .hero-overlay p {
        font-size: 1rem;
      }

      .carousel-control-prev,
      .carousel-control-next {
        width: 50px;
        height: 50px;
      }

      .carousel-control-prev {
        left: 15px;
      }

      .carousel-control-next {
        right: 15px;
      }

      .modern-section {
        padding: 60px 0;
      }

      .section-title h2 {
        font-size: 2rem;
      }

      .weather-container {
        position: relative;
        top: auto;
        left: auto;
        transform: none;
        margin: 20px auto;
        display: block;
        width: fit-content;
      }

      .promotion-grid {
        grid-template-columns: 1fr;
        gap: 20px;
      }
    }

    @media (max-width: 480px) {
      .hero-overlay h1 {
        font-size: 2rem;
      }

      .modern-card .card-body {
        padding: 20px;
      }
    }

    /* Smooth loading animations */
    .fade-in {
      opacity: 0;
      transform: translateY(30px);
      animation: fadeInUp 0.8s ease-out forwards;
    }

    .fade-in:nth-child(1) { animation-delay: 0.1s; }
    .fade-in:nth-child(2) { animation-delay: 0.2s; }
    .fade-in:nth-child(3) { animation-delay: 0.3s; }

    @keyframes fadeInUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</head>
<body>

  <!-- Include Navbar -->
  <%- include('partials/homepage.ejs') %>

  <!-- Weather -->
  <div class="weather-container">
    <i class="fas fa-cloud-sun weather-icon"></i>
    <span id="weather">Loading weather...</span>
  </div>

  <!-- Hero Section -->
  <section class="hero-section">
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#heroCarousel" data-bs-slide-to="2"></button>
      </div>
      
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="/images/web-facility.png" alt="BFC Facilities" />
        </div>
        <div class="carousel-item">
          <img src="/images/BCIS-Indoor-Soccer-228.jpg" alt="Indoor Soccer" />
        </div>
        <div class="carousel-item">
          <img src="/images/reception.jpg" alt="Club Reception" />
        </div>
      </div>
      
      <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon">
          <i class="fas fa-chevron-left"></i>
        </span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon">
          <i class="fas fa-chevron-right"></i>
        </span>
        <span class="visually-hidden">Next</span>
      </button>

      <div class="hero-overlay">
        <h1>Welcome to BFC</h1>
        <p>Singapore's premier football club where champions are made. Experience world-class facilities, expert coaching, and a community that shares your passion.</p>
        <a href="/about" class="cta-button">
          <i class="fas fa-info-circle"></i>
          About Us
        </a>
      </div>
    </div>
  </section>

  <!-- Promotions Section -->
  <section class="modern-section">
    <div class="floating-shapes"></div>
    <div class="container position-relative">
      <div class="section-title">
        <h2>Latest Promotions</h2>
        <p>Don't miss out on our amazing deals and special offers designed just for our club members.</p>
      </div>
      
      <div class="promotion-grid">
        <div class="modern-card fade-in">
          <img src="/images/food promo 1.avif" alt="Game Day Meals Promotion" />
          <div class="card-body">
            <h5>Game Day Special</h5>
            <p>Get 2-for-1 on all meals during match days. Perfect for sharing the excitement with friends and family.</p>
            <div class="card-meta">
              <span><i class="fas fa-clock"></i>Valid on match days</span>
              <span><i class="fas fa-utensils"></i>Food & Beverage</span>
            </div>
          </div>
        </div>
        
        <div class="modern-card fade-in">
          <img src="/images/burger2.jpeg" alt="Weekend Burger Combo" />
          <div class="card-body">
            <h5>Weekend Combo Deal</h5>
            <p>Delicious burger combo for only $5 every weekend. Fuel up before or after your training sessions.</p>
            <div class="card-meta">
              <span><i class="fas fa-calendar-week"></i>Weekends only</span>
              <span><i class="fas fa-dollar-sign"></i>Only $5</span>
            </div>
          </div>
        </div>
        
        <div class="modern-card fade-in">
          <img src="/images/drink.jpeg" alt="Jersey Purchase Deal" />
          <div class="card-body">
            <h5>Jersey + Drink Combo</h5>
            <p>Show your club pride! Get a complimentary drink with every official BFC jersey purchase.</p>
            <div class="card-meta">
              <span><i class="fas fa-tshirt"></i>With jersey purchase</span>
              <span><i class="fas fa-gift"></i>Free drink included</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Upcoming Events Section -->
  <section class="modern-section" style="background: rgba(26, 31, 46, 0.3);">
    <div class="container">
      <div class="section-title">
        <h2>Upcoming Events</h2>
        <p>Stay updated with all the exciting events happening at BFC. From matches to training camps, there's always something happening.</p>
      </div>

      <% if (events.length > 0) { %>
        <div class="event-carousel">
          <div id="eventCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="4000">
            <div class="carousel-inner">
              <% events.forEach((event, index) => { %>
                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                  <div class="modern-card">
                    <img src="/images/<%= event.Eventpic %>" alt="<%= event.Title %>" />
                    <div class="card-body">
                      <h5><%= event.Title %></h5>
                      <p><%= event.Description %></p>
                      <div class="card-meta">
                        <span><i class="fas fa-calendar"></i><%= new Date(event.EventDate).toLocaleDateString() %></span>
                        <span><i class="fas fa-map-marker-alt"></i><%= event.Location %></span>
                      </div>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>

            <% if (events.length > 1) { %>
              <button class="carousel-control-prev" type="button" data-bs-target="#eventCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon">
                  <i class="fas fa-chevron-left"></i>
                </span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#eventCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon">
                  <i class="fas fa-chevron-right"></i>
                </span>
              </button>
            <% } %>
          </div>
        </div>
      <% } else { %>
        <div class="text-center">
          <div class="modern-card" style="max-width: 500px; margin: 0 auto;">
            <div class="card-body">
              <i class="fas fa-calendar-times" style="font-size: 3rem; color: var(--text-muted); margin-bottom: 20px;"></i>
              <h5>No Events Currently Scheduled</h5>
              <p>Check back soon for exciting upcoming events and activities!</p>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </section>

  <!-- Bootstrap Bundle JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Enhanced Weather Script -->
  <script>
    const apiKey = '6dfe40dea2414c69dbe99066136ae43c';
    const city = 'Singapore';
    const weatherElement = document.getElementById('weather');

    fetch(`https://api.openweathermap.org/data/2.5/weather?q=Singapore&units=metric&appid=${apiKey}`)
      .then(response => response.json())
      .then(data => {
        const temp = Math.round(data.main.temp);
        const description = data.weather[0].description;
        const capitalizedDescription = description.charAt(0).toUpperCase() + description.slice(1);
        weatherElement.innerHTML = `${temp}°C, ${capitalizedDescription}`;
      })
      .catch(error => {
        console.error('Weather fetch error:', error);
        weatherElement.textContent = 'Weather unavailable';
      });

    // Smooth scroll behavior for internal links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // Intersection Observer for fade-in animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.opacity = '1';
          entry.target.style.transform = 'translateY(0)';
        }
      });
    }, observerOptions);

    // Observe all fade-in elements
    document.querySelectorAll('.fade-in').forEach(el => {
      observer.observe(el);
    });
  </script>
</body>
</html>