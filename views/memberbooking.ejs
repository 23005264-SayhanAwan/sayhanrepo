<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Member Booking</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
  <style>
    /* Calendar styles */
    .calendar-day {
      display: inline-block;
      width: 40px;
      height: 40px;
      line-height: 40px;
      margin: 5px;
      text-align: center;
      border-radius: 50%;
      font-weight: bold;
      cursor: default;
      user-select: none;
      box-shadow: 0 0 5px rgba(0,0,0,0.5);
    }

    .available {
      background-color: #f49b00; /* Orange */
      color: #0c0f18; /* Dark text */
    }

    .booked {
      background-color: #000000; /* Black */
      color: #ffffff; /* White text */
    }

    .calendar-day:hover {
      transform: scale(1.1);
      transition: transform 0.2s;
    }

    /* Custom black & white table */
    .custom-table {
      background-color: #000;
      color: #fff;
    }

    .custom-table th,
    .custom-table td {
      background-color: #fff;
      color: #fff;
      border-color: #fff;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <%- include('partials/Membernav.ejs') %>

  <!-- Main Content -->
  <div class="container mt-4">
    <h2>Welcome, <%= member.Member_FullName %>!</h2>
    <p class="lead" >Your Booking Page</p>

    <!-- Tier Price Table -->
    <h4>Membership Tier Prices</h4>
    <table class="table table-bordered w-50 custom-table">
      <thead>
        <tr><th>Tier</th><th>Hourly Rate</th></tr>
      </thead>
      <tbody>
        <tr><td>Gold</td><td>$20/hr</td></tr>
        <tr><td>Silver</td><td>$25/hr</td></tr>
        <tr><td>Bronze</td><td>$30/hr</td></tr>
      </tbody>
    </table>

    <!-- Booking Calendar Display -->
    <h4 class="mt-5">This Month's Calendar</h4>
    <div class="mb-4">
      <% calendar.forEach(day => { %>
        <div class="calendar-day <%= day.isBooked ? 'booked' : 'available' %>">
          <%= new Date(day.date).getDate() %>
        </div>
      <% }) %>
    </div>

    <!-- Booking Form -->
    <form action="/Booking" method="POST">
      <div class="row mb-3">
        <div class="col-md-6">
          <label for="bookingDate" class="form-label">Select a Date:</label>
          <input
            type="date"
            id="bookingDate"
            name="bookingDate"
            class="form-control"
            min="<%= calendar.length ? calendar[0].date : '' %>"
            max="<%= calendar.length ? calendar[calendar.length -1].date : '' %>"
            required
          />
        </div>
        <div class="col-md-6">
          <label for="timeSlot" class="form-label">Select Time Slot (1 hour):</label>
          <select name="timeSlot" id="timeSlot" class="form-select" required>
            <% for (let hour = 10; hour < 22; hour++) { %>
              <option value="<%= hour %>:00"><%= hour %>:00 - <%= hour + 1 %>:00</option>
            <% } %>
          </select>
        </div>
      </div>
      <button type="submit" class="btn btn-warning mb-4">Book and Pay</button>
    </form>
  </div>
</body>
</html>
